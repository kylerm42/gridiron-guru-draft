<%= render 'layouts/header', header: "Join #{@league ? @league.name : 'a league'}",
           tagline: "Use the league's activation key and password to become an owner" %>

<%= render 'layouts/notices' %>

<div class='container'>
  <div class='row'>
    <div class='well well-lg col-md-offset-3 col-md-10'>

      <%= form_for :league, url: { action: :join },
                            html: { class: 'form-horizontal' } do |f| %>

        <div class='form-group'>
          <%= f.label :activation_key, class: 'col-md-3 control-label' %>
          <% if @league %>
            <p class='col-md-13 form-control-static'><%= @league.activation_key %></p>
            <%= f.hidden_field :activation_key, value: @league.activation_key %>
          <% else %>
            <div class='col-md-13'>
              <%= f.text_field :activation_key, class: 'form-control', autocomplete: 'off' %>
            </div>
          <% end %>
        </div>

        <div class='form-group'>
          <%= f.label :password, class: 'col-md-3 control-label' %>
          <div class='col-md-13'>
            <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
          </div>
        </div>
        
        <div class='form-group'>
          <div class='col-md-offset-3 col-md-13'>
            <%= f.submit 'Join League', class: 'btn btn-success' %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>