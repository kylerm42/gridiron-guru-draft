<%= render 'layouts/header', header: "Edit your team",
           tagline: "Take full control of your team, and customize it to your heart's desire." %>

<%= render 'layouts/notices' %>

<div class='container'>
  <div class='row'>
    <div class='well well-lg col-md-offset-3 col-md-10'>

      <%= form_for @team, url: team_path(@team),
                            html: { class: 'form-horizontal' } do |f| %>

        <div class='form-group'>
          <%= f.label :name, 'Team name', class: 'col-md-3 control-label' %>
          <div class='col-md-13'>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :color, class: 'col-md-3 control-label' %>
          <div class='col-md-13'>
            <div class='input-group'>
              <div class="input-group-addon">#</div>
              <%= f.text_field :color, class: 'form-control' %>
            </div>
            <p class='help-block'>This is used to distinguish your team in the draft. FYI, darker colors work better.</p>
          </div>
        </div>        
        
        <div class='form-group'>
          <div class='col-md-offset-3 col-md-13'>
            <%= f.submit 'Update Team', class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
        
    </div>
  </div>
</div>