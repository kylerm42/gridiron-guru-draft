<%= render 'layouts/header', header: "The Draftpad",
           tagline: "Quick access to all of your leagues and drafts" %>

<%= render 'layouts/notices' %>

<div class='container'>
  <div class='row'>
    <div class='col-xs-offset-3 col-xs-10'>
      <% @user.leagues.each do |league| %>
        <div class='well well-lg'>
          <h2 class='launchpad-title'>
            <span class="label label-warning pull-right">
              <%= fa_icon 'gear spin' %>Setup/Pre-draft
            </span>
            <%= league.name %>
          </h2>

          <div class='btn-group pull-right league-actions'>
            <a href=<%= edit_league_path(league) %> class='btn btn-info'>
              <%= fa_icon 'cogs' %>League settings
            </a>
            <a type='a' class='btn btn-info'>
              <%= fa_icon 'users' %>Draft board
            </a>
            <div class="btn-group">
              <a type="a" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                Actions
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#" class='text-success'>
                  <%= fa_icon 'trophy' %>Begin draft
                </a></li>
                <li class='divider'></li>
                <li><a href="#" class='text-danger'>
                  <%= fa_icon 'trash-o' %>Delete league
                </a></li>
              </ul>
            </div>
          </div>

          <span class='badge clearfix'>
            <%= league.number_of_teams %> teams</span>
            <% League::POSITION_NAMES.each do |position| %>
              <% if league.positions[position] %>
                <span class='badge'>
                  <%= league.positions[position] %> <%= position %>
                </span>
              <% end %>
            <% end %>
          </p>

          <div class="progress">
            <div class="progress-bar progress-bar-info progress-bar-striped"
                 role="progressbar" aria-valuenow="20" aria-valuemin="0"
                 aria-valuemax="100" style="width: 20%">
              20%
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>