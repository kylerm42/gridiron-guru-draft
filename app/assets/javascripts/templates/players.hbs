<thead>
  <tr>
    <th rowspan='2'>Action</th>
    <th rowspan='2'>Rank</th>
    <th rowspan='2'>Name</th>
    <th rowspan='2'>Position</th>
    <th rowspan='2'>Team</th>
    <th colspan='3'>Rushing</th>
    <th colspan='3'>Receiving</th>
    <th colspan='3'>Passing</th>
    <th rowspan='2'>Return TDs</th>
    <th rowspan='2'>Fumbles</th>
  </tr>
  <tr>
    <th>Attempts</th>
    <th>Yards</th>
    <th>TDs</th>
    <th>Receptions</th>
    <th>Yards</th>
    <th>TDs</th>
    <th>Yards</th>
    <th>TDs</th>
    <th>Interceptions</th>
  </tr>
</thead>
<tbody>
  {{#each}}
    <tr {{bind-attr class='position'}}>
      <td>
        <button class='btn btn-xs btn-success draft-player'
          {{bind-attr data-id='id'}} {{action 'draftPlayer' this}}>
          <i class="fa fa-plus"></i>Draft
        </button>
      </td>
      <td>{{rank}}</td>
      <td>{{fullName}}</td>
      <td>{{position}}</td>
      <td>{{team}}</td>
      <td>{{rushAtt}}</td>
      <td>{{rushYards}}</td>
      <td>{{rushTDs}}</td>
      <td>{{receptions}}</td>
      <td>{{recYards}}</td>
      <td>{{recTDs}}</td>
      <td>{{passYards}}</td>
      <td>{{passTDs}}</td>
      <td>{{passInts}}</td>
      <td>{{returnTDs}}</td>
      <td>{{fumbles}}</td>
    </tr>
  {{/each}}
</tbody>
